# chezmoi configuration template
# Variables:
#   {{ .hostname }} - system hostname
#   {{ .username }} - current username
#   {{ .email }} - git email (set via --prompt or env)

[data]
  # User-specific data
  hostname = "{{ .hostname }}"
  username = "{{ .username }}"

  {{- if .email }}
  email = "{{ .email }}"
  {{- end }}

  {{- if .editor }}
  editor = "{{ .editor }}"
  {{- end }}

[templateOptions]
  # Template syntax options
  leftDelimiter = "{{"
  rightDelimiter = "}}"

[diff]
  # Use pager for diffs
  pager = "less -F"

[merge]
  # Merge command for conflicts
  command = "vimdiff"

[git]
  # Auto-commit after chezmoi apply
  autoCommit = false
  autoPush = false

{{ if stat (joinPath .chezmoi.homeDir ".ssh" "id_ed25519.pub") }}
# SSH key exists - can configure git
{{ else }}
# No SSH key - will prompt for setup
{{ end }}
